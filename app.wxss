/* 弹性盒子 */
.container {
  /* background-color: #019bff; */
  display: flex;
  flex-direction:row;
  justify-content: space-evenly;
  align-items: center;
}

/* 图标大小 */
.mini_ico {
  height: 20rpx;
  width: 20rpx;
}

.small_ico {
  height: 70rpx;
  width: 70rpx;
}

.mid_ico {
  height: 150rpx;
  width: 150rpx;
}

.big_ico {
  height: 640rpx;
  width: 640rpx;
}

/* 字体大小 */
.mini_txt{
  font-size: 35rpx;
}

.small_txt{
  font-size: 44rpx;
}

.bold_txt{
  font-weight: 700;
}
