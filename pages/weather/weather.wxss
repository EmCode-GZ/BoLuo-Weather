.weather {
  background-color: rgba(242, 242, 242, 255);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weizhi {
  width: 100%;
}

/* 实时天气状况图片 */

.weather_now {
  /* border: 1px solid black; */
  height: 880rpx;
  /* flex-direction:column; */
  padding-bottom: 50rpx;
}

/* 实时温度和简单信息 */

.temNow {
  /* border: 1px solid black; */
  display: flex;
  height: 230rpx;
}

.temNow_txt1 {
  font-size: 210rpx;
  color: #00bfff;
}

.temNow_txt2 {
  font-size: 50rpx;
  color: #00bfff;
}

/* 短时天气预报 */

.hours {
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: evenly;
  align-items: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.oneHours {
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  width: 107rpx;
}

/* 近五天天气预报 */

.fiveDays {
  background-color: #fff;
  height: 330rpx;
  width: 100%;
  align-items: center;
}

.oneDays {
  height: 65rpx;
  width: 95%rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


/* 今天天气描述 */

.detailed {
  background-color: #fff;
  font-size: 30rpx;
}

.zhibiao {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
  padding-bottom: 30rpx;
}

.test {
  padding-top: 45rpx;
}

/* 湿度的一个小格子 */

.box {
  /* border: 1px solid black; */
  width: 25%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
}

/* 温度、降水量、风向等 */

.containera {
  /* border: 1px solid black; */
  height: 210rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
